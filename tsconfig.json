{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "noUnusedLocals": true,
    "outDir": "build/",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "src"
  },
  "compileOnSave": true,
  "include": ["src", "tests"]
}
